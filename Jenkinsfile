pipeline{
    agent any

    stages{
        stage("BUILD"){
            steps{
                echo "========executing BUILD========"
                sh 'npm ci'
                sh 'npm run build'
                sh 'npm run package'
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
    }
    // post{
    //     always{
    //         echo "========always========"
    //     }
    //     success{
    //         echo "========pipeline executed successfully ========"
    //     }
    //     failure{
    //         echo "========pipeline execution failed========"
    //     }
    // }
}